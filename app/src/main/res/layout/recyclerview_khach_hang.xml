<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:elevation="8dp"
    android:background="@drawable/kh_item"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ten khach hang: "/>
            <TextView
                android:id="@+id/tv_tenKH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="ten khach hang: "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="so DT: "/>
            <TextView
                android:id="@+id/tv_sdtKH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ten khach hang: "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ten dang nhap: "/>
            <TextView
                android:id="@+id/tv_tenDNKH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ten khach hang: "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="mat khau: "/>
            <TextView
                android:id="@+id/tv_matKhauKH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ten khach hang: "/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>